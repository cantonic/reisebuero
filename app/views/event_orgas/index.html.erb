<h1>Listing event_orgas</h1>

<table>
  <tr>
    <th>Event</th>
    <th>User</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @event_orgas.each do |event_orga| %>
  <tr>
    <td>
      <% if event_orga.event %>
        <%= event_orga.event.name %>
      <% end %>
    </td>
    <td>
      <% if event_orga.user %>
        <%= event_orga.user.email %>
      <% end %>
    </td>
    <td>
      <% if event_orga.category %>
        <%= event_orga.category.name %>
      <% end %>
    </td>
    <td><%= link_to 'Show', event_orga %></td>
    <td><%= link_to 'Edit', edit_event_orga_path(event_orga) %></td>
    <td><%= link_to 'Destroy', event_orga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

